<?xml version="1.0" encoding="UTF-8"?>

<!-- the parent view - provides the gray background -->

    <RelativeLayout android:padding="5dp"
    android:background="@color/frame_background"
    android:gravity="center_vertical|bottom"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the innner view - provides the white rectangle -->

    <LinearLayout android:background="@drawable/frame"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

    <!-- the icon view -->


    <ImageView android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:contentDescription="icon_content_description"
        android:id="@+id/icon"/>



    <!-- the container view for the title and description -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    <!-- the title view -->
        <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/Name"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <!-- the description view -->
        <TextView android:id="@+id/CurrentActivity"
            android:layout_below="@id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>